{
  "name": "fav-font-picker",
  "displayName": "Favorite Font Picker",
  "description": "Pick and set favorite font from settings",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/realth000/vscode-fav-font-picker"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "publisher": "realth000",
  "categories": [
    "Other"
  ],
  "keywords": [
    "font"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fav-font-picker.pickFont",
        "title": "Pick favorite font",
        "shortTitle": "I am short title",
        "category": "Favorite Font Picker"
      },
      {
        "command": "fav-font-picker.pickFallbackFont",
        "title": "Pick favorite fallback font",
        "category": "Favorite Font Picker"
      }
    ],
    "configuration": [
      {
        "title": "Favorite fonts",
        "properties": {
          "favFontPicker.favFonts": {
            "type": "array",
            "default": [],
            "description": "Record favorite fonts to pick",
            "items": {
              "type": "string"
            }
          },
          "favFontPicker.favFallbackFonts": {
            "type": "array",
            "default": [],
            "description": "Record favorite fonts for fallback",
            "items": {
              "type": "string"
            }
          },
          "favFontPicker.previewFont": {
            "type": "boolean",
            "default": true,
            "description": "Preview current selected font when picking fonts"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}